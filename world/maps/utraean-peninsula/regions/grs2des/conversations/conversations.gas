[conversation_sikra_first]
{
	[text*]
	{
		screen_text = "Ah, I have forseen your arrival. The Droog have been instructed to hold me here, but I don't think they even know why. They seem to fear me for reasons I cannot fathom, but then again I am Lisbeth, the daughter of Zong. I am... Traveler.";
		choice = more;
	}
}
[conversation_sikra_join]
{
	[text*]
	{
		choice = potential_member;
		screen_text = "On behalf of my father Zong, the Brotherhood of Travelers for which we toil, and the Great Road upon which we journey, I offer humble thanks for my rescue. I have naught else to offer except my skills, but I shall pledge them til the completion of your quest, if you so desire. May I join you?";
	}
}
[conversation_sikra_accept_have_money]
{
	[text*]
	{
		screen_text = "To the completion of your quest, to the ends of the world, I now vow my loyalty to you, servant of the Historical Society! Let us begin our sacred work.";
	}
}
[conversation_sikra_accept_no_money]
{
	[text*]
	{
		screen_text = "You need more money...";
	}
}
[conversation_sikra_reject]
{
	[text*]
	{
		screen_text = "I shall abide by your will, and hold your kindness in my heart. May the road you follow be pleasant, and your vengeance complete.";
	}
}
[conversation_sikra_disband]
{
	[text*]
	{
		screen_text = "As you wish, but my loyalty remains yours. Should you need me again, I shall be glad to assist you. Fare well.";
	}
}
[conversation_sikra_rejoin]
{
	[text*]
	{
		choice = potential_member;
		screen_text = "I have not forgotten your generosity. I am glad to assist you, should you desire my help. Would you have one born with the blood of the Travelers fighting at your side?";
	}
}
[conversation_sikra_disband_rejoin]
{
	[text*]
	{
		choice = potential_member;
		screen_text = "You have need of Lisbeth again? The honor would be mine if I might serve you further.";
	}
}
